{% extends 'base.html.twig' %}

{% block title %}
	{% if not customTitle is defined %}
		Erreur 404!
	{% else %}
		{{customTitle | raw}}
	{% endif %}
{% endblock %}

{% block body %}
<h1>Erreur 404</h1>
	{% if not customMessage is defined %}
		Erreur, cette page n'existe pas!
	{% else %}
		{{customMessage | raw}}
	{% endif %}
{% endblock %}
