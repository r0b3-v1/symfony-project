<div class="burger">
    <i class="fa fa-bars" collapse-trigger target="burger-nav" aria-hidden="true"></i>

    <nav collapsable id="burger-nav">
            <a class='nav_link' href="{{path('app_home')}}">Accueil
                <i class="fa-solid fa-house"></i>
            </a>
            <span class='nav_link' href="#" id="search-link">Recherche rapide
                <form action="{{path('app_search')}}">
                    <input type="text" name="params" id="quicksearch-input" value="{% if paramsGet is defined %}{{paramsGet}}{% endif %}"> 
                    <i class="fa-solid fa-magnifying-glass" id="quicksearch-submit"></i>
                </form>
            </span>

            {% if is_granted('ROLE_USER') and app.user.statut.name == 'artiste' %}
                <a class='nav_link' href="{{ path('app_post_upload')}}">Upload
                    <i class="fa-solid fa-file-arrow-up"></i>
                </a>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <a class='nav_link' href="{{ path('app_admin')}}">Espace administrateur</a>
            {% endif %}

            {% if not(is_granted('ROLE_USER')) %}
                <a class="nav_link" href="{{path('app_login')}}">Se Connecter/S'inscrire
                    <i class="fa-solid fa-power-off"></i>
                </a>
            {% else %}

                <span class="user">
                    <a href="{{ path('app_profile_infos',{username: app.user.username}) }}">
                        Bienvenue
                        {{app.user.username}}!
                        {% if not(app.user.avatar)%}
                            <img src="{{ asset('images/static/avatar.png') }}" alt="avatar">
                        {% else %}
                            <img src="{{ asset('images/users/' ~ app.user.avatar)}}" alt="avatar">
                        {% endif %}
                        {{ render(controller('App\\Controller\\ProfileController::listUnseenNotifs'))}}
                    </a>
                </span>

                <a class="nav_link" href="{{path('app_logout')}}">Se d√©connecter
                    <i class="fa-solid fa-power-off"></i>
                </a>
            {% endif %}
    </nav>
</div>